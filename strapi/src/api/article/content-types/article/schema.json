{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false,
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-block",
        "page.media-text",
        "page.cards-grid",
        "page.accordion",
        "page.cta",
        "page.hero",
        "page.faq-list"
      ]
    },
    "tags": {
      "type": "json"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo"
    }
  }
}
