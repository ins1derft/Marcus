{
  "kind": "collectionType",
  "collectionName": "help_topics",
  "info": {
    "singularName": "help-topic",
    "pluralName": "help-topics",
    "displayName": "Help topic"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-block",
        "page.media-text",
        "page.cards-grid",
        "page.accordion",
        "page.cta",
        "page.faq-list"
      ]
    },
    "order": {
      "type": "integer"
    },
    "faqItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::faq-item.faq-item",
      "mappedBy": "topic"
    }
  }
}
